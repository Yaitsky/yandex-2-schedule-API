<div class="schedule__row">
    <div class="schedule__col schedule__col--wide" data-label="Название">
        <a href="{{video}}" class="schedule__link">{{title}}</a>
    </div>
    <div class="schedule__col schedule__col--medium" data-label="Школа">
        {{#each school as |school-name|}}
              <span>{{school-name}}</span>
        {{/each}}
    </div>
    <div class="schedule__col" data-label="Учитель">
        {{#each teacher as |teacher-name|}}
              <span class="schedule__teacher">{{teacher-name}}</span>
        {{/each}}
    </div>
    <div class="schedule__col" data-label="Аудитория">{{classroom}}</div>
    <div class="schedule__col" data-label="Дата">
        {{date}}
    </div>
    <div class="buttons">
        <div class="buttons__item buttons__item--update">
            <i class="fa fa-pencil buttons__icon" aria-hidden="true"></i>
        </div>
        <div class="buttons__item buttons__item--delete">
            <i class="fa fa-times buttons__icon" aria-hidden="true"></i>
        </div>
    </div>
</div>