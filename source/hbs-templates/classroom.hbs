<div class="classrooms__row">
    <div class="classrooms__col classrooms__col--wide classrooms__col--title">
        {{title}}
    </div>
    <div class="classrooms__col classrooms__col--wide classrooms__col--location">
        {{location}}
    </div>
    <div class="classrooms__col classrooms__col--small classrooms__col--count">
        {{count}}
    </div>
    <div class="buttons">
        <div class="buttons__item buttons__item--update">
            <i class="fa fa-pencil buttons__icon" aria-hidden="true"></i>
        </div>
        <div class="buttons__item buttons__item--delete">
            <i class="fa fa-times buttons__icon" aria-hidden="true"></i>
        </div>
    </div>
</div>